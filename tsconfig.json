{
  "compilerOptions": {
    "target": "es2018", // Node 10
    "module": "commonjs",
    "lib": ["es2018"],
    "declaration": true,
    "sourceMap": false,
    "outDir": "./dist",
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noImplicitReturns": true,
    "noUnusedParameters": false,
    "moduleResolution": "node"
  },
  "include": ["./src"]
}
